<% layout("/layouts/boilerplate") %>
<body class="bg-gray-900 min-h-screen flex items-center justify-center">
  <div class="w-full max-w-3xl bg-white shadow-2xl rounded-lg p-8 space-y-6">
    <h1 class="text-4xl font-extrabold text-gray-800 text-center mb-6">
      Prediction Result
    </h1>

    <% if (result) { %>
    <div class="bg-green-100 p-6 rounded-xl border border-green-300 shadow-xl">
      <p class="text-2xl text-green-800 font-semibold">
        <strong>Predicted Value:</strong> <%= result %>
      </p>
    </div>
    <% } else { %>
    <div
      class="bg-yellow-100 p-6 rounded-xl border border-yellow-300 shadow-xl"
    >
      <p class="text-2xl text-yellow-800 font-semibold">
        No result available. Please make a prediction first.
      </p>
    </div>
    <% } %>

    <div class="text-center mt-8">
      <a
        href="/predict"
        class="inline-block py-3 px-8 bg-indigo-600 text-white text-lg font-semibold rounded-full shadow-lg hover:bg-indigo-700 transition duration-200 ease-in-out transform hover:scale-105 focus:outline-none focus:ring-2 focus:ring-indigo-500"
      >
        Make Another Prediction
      </a>
    </div>
  </div>
</body>

<% layout("/layouts/boilerplate") %>
<div class="bg-white grid grid-cols-1 sm:grid-cols-3 min-h-screen">
  <!-- Sidebar -->
  <div class="bg-gray-300 p-6">
    <h1 class="text-lg font-semibold text-gray-800">User Information</h1>
  </div>

  <!-- Form Section -->
  <div class="col-span-2 flex justify-center items-center bg-gray-50 p-4">
    <div class="p-8 bg-white shadow-xl rounded-lg w-full sm:w-3/4">
      
      <!-- Error and Success Messages -->
      <% if (errorMessage) { %>
        <div class="bg-red-100 text-red-700 p-3 rounded mb-4">
          <strong>Error:</strong> <%= errorMessage %>
        </div>
      <% } %>

      <% if (successMessage) { %>
        <div class="bg-green-100 text-green-700 p-3 rounded mb-4">
          <strong>Success:</strong> <%= successMessage %>
        </div>
      <% } %>

      <form action="/userinfo" method="POST" class="space-y-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
          
          <!-- Name -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2" for="name">Name:</label>
            <input
              type="text"
              id="name"
              name="name"
              value="<%= userInfo ? userInfo.name : '' %>"
              class="block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-indigo-500 focus:border-indigo-500"
              required
              placeholder="Enter your full name"
            />
          </div>

          <!-- Sex -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2" for="sex">Sex:</label>
            <select
              name="sex"
              id="sex"
              class="block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-indigo-500 focus:border-indigo-500"
              required
            >
              <option value="" disabled selected>Select your gender</option>
              <option value="Male" <%= userInfo && userInfo.sex === "Male" ? "selected" : "" %>>Male</option>
              <option value="Female" <%= userInfo && userInfo.sex === "Female" ? "selected" : "" %>>Female</option>
              <option value="Transgender" <%= userInfo && userInfo.sex === "Transgender" ? "selected" : "" %>>Transgender</option>
            </select>
          </div>

          <!-- Age -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2" for="age">Age:</label>
            <input
              type="number"
              id="age"
              name="age"
              value="<%= userInfo ? userInfo.age : '' %>"
              class="block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-indigo-500 focus:border-indigo-500"
              required
              placeholder="Enter your age"
            />
          </div>

          <!-- Date of Birth -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2" for="dob">Date of Birth (DD/MM/YYYY):</label>
            <input
              type="text"
              id="dob"
              name="dob"
              value="<%= userInfo ? userInfo.dob : '' %>"
              class="block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-indigo-500 focus:border-indigo-500"
              required
              pattern="(?:0[1-9]|[12][0-9]|3[01])/(?:0[1-9]|1[0-2])/\d{4}"
              title="Enter a valid date in DD/MM/YYYY format"
              placeholder="DD/MM/YYYY"
            />
          </div>

          <!-- Weight -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2" for="weight">Weight (kg):</label>
            <input
              type="number"
              id="weight"
              name="weight"
              value="<%= userInfo ? userInfo.weight : '' %>"
              class="block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-indigo-500 focus:border-indigo-500"
              required
              placeholder="Enter your weight in kilograms"
            />
          </div>

          <!-- Height -->
          <div>
            <label class="block text-sm font-semibold text-gray-700 mb-2" for="height">Height (cm):</label>
            <input
              type="number"
              id="height"
              name="height"
              value="<%= userInfo ? userInfo.height : '' %>"
              class="block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-indigo-500 focus:border-indigo-500"
              required
              placeholder="Enter your height in centimeters"
            />
          </div>

          <!-- Contact Info -->
          <div class="col-span-2">
            <label class="block text-sm font-semibold text-gray-700 mb-2" for="contact_info">Contact Info:</label>
            <input
              type="number"
              id="contact_info"
              name="contact_info"
              value="<%= userInfo ? userInfo.contact_info : '' %>"
              class="block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-indigo-500 focus:border-indigo-500"
              required
              placeholder="Enter your contact number"
            />
          </div>

          <!-- Address -->
          <div class="col-span-2">
            <label class="block text-sm font-semibold text-gray-700 mb-2" for="address">Address:</label>
            <input
              type="text"
              id="address"
              name="address"
              value="<%= userInfo ? userInfo.address : '' %>"
              class="block w-full border border-gray-300 rounded-lg shadow-sm p-3 focus:ring-indigo-500 focus:border-indigo-500"
              required
              placeholder="Enter your full address"
            />
          </div>
        </div>

        <button
          type="submit"
          class="w-full bg-indigo-600 text-white py-3 px-6 rounded-lg shadow hover:bg-indigo-700 transition"
        >
          Save
        </button>
      </form>

      <a
        href="/logout"
        class="mt-6 block text-center text-sm text-indigo-500 hover:underline"
      >
        Logout
      </a>
    </div>
  </div>
</div>

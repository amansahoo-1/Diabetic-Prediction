<% layout("/layouts/boilerplate") %>
<body class="bg-gray-100 font-sans leading-normal tracking-normal">
  <!-- Hero Section -->
  <div class="bg-indigo-600 text-white py-12">
    <div class="container mx-auto text-center">
      <h1
        class="text-5xl font-extrabold hover:scale-110 transition-transform duration-300"
      >
        Swasth
      </h1>
      <p
        class="mt-4 text-xl hover:text-indigo-300 transition-colors duration-300"
      >
        Empowering Lives through Awareness and Care
      </p>
    </div>
  </div>

  <!-- About Section -->
  <section class="container mx-auto px-6 py-12">
    <div
      class="bg-white shadow-lg rounded-lg p-8 hover:shadow-2xl transition-shadow duration-300"
    >
      <h2 class="text-3xl font-bold text-indigo-700 mb-4 text-center">
        About the Diabetes Project
      </h2>
      <p class="text-gray-700 text-lg leading-relaxed mb-6">
        Diabetes is a chronic condition that affects millions of people
        worldwide. Our mission is to provide accessible resources, tools, and
        insights to help individuals manage and prevent diabetes effectively. By
        leveraging technology and community engagement, we aim to foster a
        healthier and more informed society.
      </p>
      <div class="flex justify-center">
        <img
          src="https://images.unsplash.com/photo-1470116945706-e6bf5d5a53ca?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Health and Wellness"
          class="rounded-lg shadow-md w-full md:w-2/3 transform hover:scale-105 transition-transform duration-300"
        />
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="bg-indigo-50 py-12">
    <div class="container mx-auto px-6">
      <h3 class="text-2xl font-bold text-center text-indigo-600 mb-8">
        Key Features of Our Project
      </h3>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div
          class="bg-white shadow-lg rounded-lg p-6 hover:bg-indigo-100 hover:shadow-2xl transition duration-300"
        >
          <h4 class="text-xl font-semibold text-indigo-700 mb-3">
            Personalized Insights
          </h4>
          <p class="text-gray-700">
            Receive tailored advice and data-driven insights to effectively
            manage your condition.
          </p>
        </div>
        <!-- Feature 2 -->
        <div
          class="bg-white shadow-lg rounded-lg p-6 hover:bg-indigo-100 hover:shadow-2xl transition duration-300"
        >
          <h4 class="text-xl font-semibold text-indigo-700 mb-3">
            Comprehensive Tracking
          </h4>
          <p class="text-gray-700">
            Monitor glucose levels, diet, and exercise seamlessly with
            user-friendly tools.
          </p>
        </div>
        <!-- Feature 3 -->
        <div
          class="bg-white shadow-lg rounded-lg p-6 hover:bg-indigo-100 hover:shadow-2xl transition duration-300"
        >
          <h4 class="text-xl font-semibold text-indigo-700 mb-3">
            Community Support
          </h4>
          <p class="text-gray-700">
            Connect with others and share your journey in a supportive
            environment.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call-to-Action Section -->
  <section class="bg-indigo-600 py-12 text-white">
    <div class="container mx-auto text-center">
      <h4
        class="text-2xl font-bold mb-4 hover:scale-105 transition-transform duration-300"
      >
        Take the First Step to a Healthier Life
      </h4>
      <p
        class="mb-6 text-lg hover:text-indigo-300 transition-colors duration-300"
      >
        Join our initiative today to access resources and tools designed for
        your well-being.
      </p>
      <button
        class="bg-white text-indigo-600 font-semibold px-6 py-3 rounded-full shadow-lg hover:bg-gray-100 hover:scale-105 transition-transform duration-300"
      >
        Learn More
      </button>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white py-6">
    <div class="container mx-auto text-center">
      <p class="text-lg hover:text-indigo-400 transition-colors duration-300">
        Created with ❤️ by Aman
      </p>
      <div class="mt-2">
        <a
          href="https://github.com/amansahoo-1"
          class="text-indigo-400 hover:text-indigo-600 transition-colors duration-300"
        >
          Visit My GitHub Profile
        </a>
      </div>
    </div>
  </footer>
</body>

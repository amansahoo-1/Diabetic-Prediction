<% layout("/layouts/boilerplate") %>
<body class="bg-gray-50 min-h-screen flex items-center justify-center">
  <!-- Main Container -->
  <div class="w-full max-w-3xl mx-auto px-6 py-8 mb-16">
    <!-- Added mb-16 for extra space -->
    <!-- Header -->
    <h1
      class="text-4xl font-extrabold text-gray-800 mb-10 text-center shadow-lg border-b-4 border-indigo-500 pb-2"
    >
      Settings
    </h1>

    <!-- Settings Container -->
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      <!-- Account -->
      <a
        href="/account"
        class="group bg-white shadow-md rounded-lg p-6 flex items-center justify-between transition-all transform hover:scale-105 hover:shadow-lg hover:ring-2 hover:ring-indigo-300"
      >
        <div>
          <h2
            class="text-lg font-semibold text-gray-800 group-hover:text-indigo-600"
          >
            Account
          </h2>
          <p class="text-sm text-gray-500 mt-1">
            Manage your account information and settings.
          </p>
        </div>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6 text-gray-400 group-hover:text-indigo-600"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </a>

      <!-- Notification -->
      <a
        href="/notification"
        class="group bg-white shadow-md rounded-lg p-6 flex items-center justify-between transition-all transform hover:scale-105 hover:shadow-lg hover:ring-2 hover:ring-indigo-300"
      >
        <div>
          <h2
            class="text-lg font-semibold text-gray-800 group-hover:text-indigo-600"
          >
            Notification
          </h2>
          <p class="text-sm text-gray-500 mt-1">
            Configure your notification preferences.
          </p>
        </div>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6 text-gray-400 group-hover:text-indigo-600"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </a>

      <!-- Privacy -->
      <a
        href="/privacy"
        class="group bg-white shadow-md rounded-lg p-6 flex items-center justify-between transition-all transform hover:scale-105 hover:shadow-lg hover:ring-2 hover:ring-indigo-300"
      >
        <div>
          <h2
            class="text-lg font-semibold text-gray-800 group-hover:text-indigo-600"
          >
            Privacy
          </h2>
          <p class="text-sm text-gray-500 mt-1">
            Adjust your privacy and data settings.
          </p>
        </div>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6 text-gray-400 group-hover:text-indigo-600"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </a>

      <!-- Language -->
      <a
        href="/language"
        class="group bg-white shadow-md rounded-lg p-6 flex items-center justify-between transition-all transform hover:scale-105 hover:shadow-lg hover:ring-2 hover:ring-indigo-300"
      >
        <div>
          <h2
            class="text-lg font-semibold text-gray-800 group-hover:text-indigo-600"
          >
            Language
          </h2>
          <p class="text-sm text-gray-500 mt-1">
            Select your preferred language.
          </p>
        </div>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-6 w-6 text-gray-400 group-hover:text-indigo-600"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M9 5l7 7-7 7"
          />
        </svg>
      </a>

      <!-- Help -->

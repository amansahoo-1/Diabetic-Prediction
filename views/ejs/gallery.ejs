<% layout("/layouts/boilerplate") %>

<body class="bg-gray-50 min-h-screen">
  <div class="container mx-auto px-6 py-8 mt-16">
    <!-- Adjusted margin-top -->
    <h1 class="text-4xl font-extrabold text-gray-800 mb-6 text-center">
      Gallery
    </h1>

    <!-- Grid layout for 1 column on small screens, 2 columns on medium screens, and 3 columns on larger screens -->
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <!-- Card 1 -->
      <div
        class="group relative bg-white rounded-lg shadow-lg overflow-hidden h-full flex flex-col transition-transform duration-300 hover:shadow-2xl hover:-translate-y-2"
      >
        <img
          src="https://images.unsplash.com/photo-1576765974102-b756026ecee3?q=80&w=500&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
          alt="Image 1"
          class="w-full h-48 object-cover rounded-t-lg"
        />
        <div class="p-4 flex-1 flex flex-col justify-between">
          <h2
            class="text-2xl font-semibold text-gray-800 group-hover:text-blue-600 transition duration-300"
          >
            Insulin
          </h2>
          <p class="text-gray-600 mt-2 flex-grow">
            Insulin Helps to Conntrol Diabetes.
          </p>
        </div>
      </div>

      <!-- Card 2 -->
